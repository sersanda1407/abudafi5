{
  "version": 2,
  "builds": [
    { "src": "index.php", "use": "@vercel/php" },
    { "src": "*.php", "use": "@vercel/php" },
    { "src": "includes/**/*.php", "use": "@vercel/php" },
    { "src": "config/**/*.php", "use": "@vercel/php" }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/index.php" }
  ]
}